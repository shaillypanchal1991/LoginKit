<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/horizontalCarousel"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:layout_constraintBottom_toTopOf="@id/guidelineTop60"
    app:layout_constraintHeight_percent="0.30"
    app:layout_constraintLeft_toRightOf="@id/guidelineLeft"
    app:layout_constraintRight_toLeftOf="@+id/guidelineRight"
    app:layout_constraintTop_toBottomOf="@+id/guidelineTop45"
    app:layout_constraintWidth_percent="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRAVE TV"
                android:backgroundTint="@color/colorDarkRed"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"></LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>